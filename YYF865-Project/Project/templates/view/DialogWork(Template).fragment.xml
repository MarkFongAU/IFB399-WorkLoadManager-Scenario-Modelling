<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!DOCTYPE core:FragmentDefinition>
<!-- View Template of the Work Dialog Fragment -->
<!-- Author: Mark (YeeChen Fong) -->
<!-- (Template is not 100% functional without making adjustments, USE AT OWN DISCRETION) -->
<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <SelectDialog
            id="dialog_WORK"
            noDataText="No Options Found"
            title="{i18n>optionsTitle} {i18n>optionsWorkIncomingTitle}"
            liveChange="onDialogSearch"
            confirm="onAddRemoveCategoryWork"
            close="onAddRemoveCategoryWork"
            items="{
            path : '/'
		}">
        <StandardListItem
                title="{name}"
                description="{value}"
                type="Active">
        </StandardListItem>
    </SelectDialog>
</core:FragmentDefinition>